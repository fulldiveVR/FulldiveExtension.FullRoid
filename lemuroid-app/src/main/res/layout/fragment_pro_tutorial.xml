<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/size_24dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationContainer"
        android:layout_width="@dimen/lottie_animation_width"
        android:layout_height="@dimen/lottie_animation_height"
        android:layout_marginTop="@dimen/size_32dp"
        app:layout_constraintBottom_toTopOf="@+id/titleTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/pro_tutorial_animation" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_24dp"
        android:text="@string/string_pro_tutorial_title"
        android:textSize="@dimen/textsize_xxxlarge"
        app:layout_constraintBottom_toTopOf="@+id/disclamerTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animationContainer" />

    <TextView
        android:id="@+id/disclamerTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_36dp"
        android:lineSpacingExtra="@dimen/line_spacing_extra"
        android:text="@string/string_pro_tutorial_disclamer"
        app:layout_constraintBottom_toTopOf="@+id/limitedDealTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/limitedDealTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_16dp"
        android:drawableStart="@drawable/ic_sale"
        android:drawablePadding="@dimen/size_8dp"
        android:text="@string/string_pro_limited_deal"
        android:textAllCaps="true"
        app:layout_constraintBottom_toTopOf="@+id/priceImageView"
        app:layout_constraintEnd_toEndOf="@+id/priceImageView"
        app:layout_constraintStart_toStartOf="@+id/priceImageView" />

    <ImageView
        android:id="@+id/priceImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_32dp"
        android:src="@drawable/ic_limited_deal"
        app:layout_constraintBottom_toTopOf="@+id/buyProButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/buyProButton"
        style="@style/FlatTheme.OnboardingColoredButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_pro_buy_now"
        android:textSize="@dimen/textsize_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>